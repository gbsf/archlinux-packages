# $Id: PKGBUILD,v 1.6 2006/05/21 15:29:32 uid1015 Exp $
# Maintainer: arjan <arjan@archlinux.org>
#contributor Sarah Hay <sarahhay@mb.sympatico.ca>

pkgname=a52dec
pkgver=0.7.4
pkgrel=3.1
pkgdesc="liba52 is a free library for decoding ATSC A/52 streams."
arch=(i686 x86_64)
depends=(glibc)
source=(http://liba52.sourceforge.net/files/$pkgname-$pkgver.tar.gz)
[ "$CARCH" = "x86_64" ] && source=(${source[@]} 'http://www.gentoo.org/cgi-bin/viewcvs.cgi/*checkout*/media-libs/a52dec/files/a52dec-0.7.4-build.patch')
url="http://liba52.sourceforge.net/"
md5sums=('caa9f5bc44232dc8aeea773fea56be80')
[ "$CARCH" = "x86_64" ] && md5sums=(${md5sums[@]} '3bb61e4ec18824ddab0068807ad43de8')

build() {
  cd $startdir/src/$pkgname-$pkgver

  [ "$CARCH" == "x86_64" ] && patch -Np1 -i ../a52dec-0.7.4-build.patch &&  ./bootstrap || return 1

  ./configure --prefix=/usr --enable-shared
  make || return 1
  make DESTDIR=$startdir/pkg install
  install -m644 liba52/a52_internal.h $startdir/pkg/usr/include/a52dec/ 
  find $startdir/pkg -name '*.la' -exec rm {} \;
}
