# $Id: PKGBUILD,v 1.10 2007/06/23 16:56:02 pierre Exp $
# Maintainer: Simo Leone <simo@archlinux.org>
# Contributor: Simo Leone <neotuli@gmail.com>
pkgname=darcs
pkgver=1.0.9
pkgrel=1
pkgdesc="Decentralized replacement for CVS with roots in quantum mechanics"
arch=(i686 x86_64)
url="http://darcs.net/"
license=('GPL')
depends=('curl' 'gmp')
makedepends=('ghc')
install=darcs.install
source=("http://darcs.net/$pkgname-$pkgver.tar.gz")
md5sums=('077420eec437ecdd45d8dc6682ee61fa')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --with-sendmail=sendmail
  make || return 1
  make DESTDIR=$startdir/pkg install
}
